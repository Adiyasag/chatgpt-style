{
    "name": "ChatGPT-Style",
    "version": "0.0.0",
    "description": "A styles and background change to chat gpt website",
    "manifest_version": 3,
    "author": "Mateus Neres",
    "action": {
      "default_popup": "src/index.html",
      "default_icon": "src/assets/icon.png"
  },
  "permissions": [
      "storage"
  ],
  "web_accessible_resources": [
      {
          "resources": [
              "themes/*"
          ],
          "matches": [
              "https://chat.openai.com/*"
          ]
      }
  ],
  "content_scripts": [
      {
          "js": [
              "src/script.js"
          ],
          "matches": [
              "https://chat.openai.com/*"
          ]
      }
  ]
}